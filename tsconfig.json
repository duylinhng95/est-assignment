{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "outDir": "./buiild",
    "rootDir": "./",
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@Database": ["database"],
      "@Router": ["router"],
      "@Environment": ["config/environment"],
      "@Model/*": ["database/model/*"],
      "@Services/*": ["server/service/*"],
      "@Test/*": ["test/*"],
      "@Helper/*": ["server/helper/*"],
    }
  },
  "include": ["./**/*", "test"],
  "exclude": ["node_modules/**/*","dist"]
}
